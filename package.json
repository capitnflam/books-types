{
  "name": "@flaminc/books-types",
  "description": "Common types for the books app",
  "version": "0.0.0-development",
  "author": "capitN.flam",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf --glob dist coverage flaminc-books-types-*.tgz",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:ci:coverage": "vitest --run --coverage",
    "type-check": "tsc --pretty --noEmit"
  },
  "bugs": "https://github.com/capitnflam/books-types/issues",
  "dependencies": {
    "validator": "13.12.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/types": "19.5.0",
    "@flaminc/eslint-plugin": "1.3.0",
    "@flaminc/semantic-release-configs": "1.0.2",
    "@types/node": "22.7.3",
    "@types/validator": "13.12.2",
    "@vitest/coverage-v8": "2.1.1",
    "@vitest/ui": "2.1.1",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "semantic-release": "24.1.1",
    "syncpack": "13.0.0",
    "typescript": "5.6.3",
    "vitest": "2.1.1"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "homepage": "https://github.com/capitnflam/books-types#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "capitnflam/books-types"
}
