{
  "name": "@flaminc/books-types",
  "description": "Common types for the books app",
  "version": "0.0.0-development",
  "author": "capitN.flam",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf --glob dist coverage flaminc-books-types-*.tgz",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:ci:coverage": "vitest --run --coverage",
    "type-check": "tsc --pretty --noEmit"
  },
  "bugs": "https://github.com/capitnflam/books-types/issues",
  "dependencies": {
    "validator": "13.11.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@commitlint/types": "19.0.3",
    "@flaminc/eslint-plugin": "1.3.0",
    "@flaminc/semantic-release-configs": "1.0.1",
    "@types/node": "20.11.28",
    "@types/validator": "13.11.9",
    "@vitest/coverage-v8": "1.4.0",
    "@vitest/ui": "1.4.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "semantic-release": "23.0.3",
    "syncpack": "12.3.0",
    "typescript": "5.4.2",
    "vitest": "1.4.0"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "homepage": "https://github.com/capitnflam/books-types#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "capitnflam/books-types"
}
